<div class="container-fluid">
  <div id="page-login" class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <div class="text-right">
        <a href="<%= new_user_session_path %>" class="txt-default">Need an account?</a>
      </div>
      <div class="box">
        <div class="box-content">
          <div class="text-center">
            <h3 class="page-header">Register</h3>
          </div>
          <%= devise_error_messages! %>
          <div class="form-group">
            <label class="control-label">Número de Identidad</label>
            <%= f.text_field :id_number, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label class="control-label">Nombre</label>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label class="control-label">Apellido</label>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label class="control-label">Correo</label>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label class="control-label">Contraseña</label>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>
          <div class="form-group">
            <label class="control-label">Confirme su Contraseña</label>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
          <div class="text-center">
            <%= f.submit "Registrarse", class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>